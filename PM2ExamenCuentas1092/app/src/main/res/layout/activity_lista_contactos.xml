<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Barra superior con botón Atrás y búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:textSize="14sp"
            android:background="#DDDDDD"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Lista de contactos -->
    <ListView
        android:id="@+id/lvContactos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:layout_margin="8dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCompartirContacto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compartir Contacto"
                android:textSize="12sp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnVerImagen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver Imagen"
                android:textSize="12sp"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEliminarContacto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar Contacto"
                android:textSize="12sp"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnActualizarContacto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar Contacto"
                android:textSize="12sp"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
